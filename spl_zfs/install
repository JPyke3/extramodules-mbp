post_install() {
  EXTRAMODULES='extramodules-5.7-MANJARO-mbp'
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}

post_upgrade() {
  EXTRAMODULES='extramodules-5.7-MANJARO-mbp'
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}

post_remove() {
  EXTRAMODULES='extramodules-5.7-MANJARO-mbp'
  depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}
